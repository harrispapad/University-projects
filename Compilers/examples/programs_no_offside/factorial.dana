def main

  def fact is int: n as int
  begin
    if n <= 1: 
    begin 
      return: 1 
    end
    else: 
    begin 
      return: n*fact(n-1) 
    end
  end
    
  var input output is int
  begin
    input := readInteger()
    
    output := fact(input)
    writeString: "The factorial of "
    writeInteger: input
    writeString: " is "
    writeInteger: output
    writeString: "\n"
  end
end